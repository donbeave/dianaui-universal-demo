<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.dianaui.universal.core.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="nameTokens" type="com.dianaui.universal.core.demo.client.place.NameTokens"/>

    <ui:style>
        .buttons button {
            margin: 0.5em;
        }

        .labels span {
            margin-right: 5px;
        }

        .push {
            padding-top: 70px;
        }
    </ui:style>

    <g:ScrollPanel>
        <b:Container>
            <b:Navbar position="FIXED_TOP">
                <b:Container>
                    <b:NavbarHeader>
                        <b:NavbarBrand targetHistoryToken="{nameTokens.getHome}" text="Diana UI Universal"
                                       ui:field="brand"/>
                        <b:NavbarCollapseButton/>
                    </b:NavbarHeader>
                    <b:NavbarCollapse b:id="navbar-collapse">
                        <b:NavbarNav>
                            <b:AnchorListItem text="Getting started" targetHistoryToken="{nameTokens.getSetup}"/>
                            <b:ListDropDown>
                                <b:AnchorButton toggle="DROPDOWN" text="CSS"/>
                                <b:DropDownMenu>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getButtons}" text="Buttons"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getCode}" text="Code"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getForms}" text="Forms"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getGridSystem}"
                                                      text="Grid System"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getImages}" text="Images"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getResponsiveUtilities}"
                                                      text="Responsive Utilities"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getTables}" text="Tables"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getTypography}"
                                                      text="Typography"/>
                                </b:DropDownMenu>
                            </b:ListDropDown>
                            <b:ListDropDown>
                                <b:AnchorButton toggle="DROPDOWN" text="Components"/>
                                <b:DropDownMenu>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getAlerts}" text="Alerts"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getBadges}" text="Badges"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getBreadcrumbs}"
                                                      text="Breadcrumbs"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getButtonDropdowns}"
                                                      text="Button Dropdowns"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getButtonGroups}"
                                                      text="Button Groups"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getDropdowns}" text="Dropdowns"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getIcons}" text="Icons"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getInputGroups}"
                                                      text="Input Groups"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getJumbotron}" text="Jumbotron"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getLabels}" text="Labels"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getListGroup}" text="List Group"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getMediaObjects}"
                                                      text="Media Objects"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getNavbar}" text="Navbar"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getNavs}" text="Navs"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getPageHeader}"
                                                      text="Page Header"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getPagination}"
                                                      text="Pagination"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getPanels}" text="Panels"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getProgressBars}"
                                                      text="Progress Bars"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getThumbnails}"
                                                      text="Thumbnails"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getWells}" text="Wells"/>
                                </b:DropDownMenu>
                            </b:ListDropDown>
                            <b:ListDropDown>
                                <b:AnchorButton toggle="DROPDOWN" text="JavaScript"/>
                                <b:DropDownMenu>
                                    <!--<b:AnchorListItem targetHistoryToken="{nameTokens.getAffix}">Affix</b:AnchorListItem>-->
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getCarousel}" text="Carousel"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getCollapse}" text="Collapse"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getModals}" text="Modals"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getPopover}" text="Popover"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getTabs}" text="Tabs"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getTooltips}" text="Tooltips"/>
                                </b:DropDownMenu>
                            </b:ListDropDown>
                            <b:ListDropDown>
                                <b:AnchorButton toggle="DROPDOWN" text="Extras"/>
                                <b:DropDownMenu>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getBootbox}" text="Bootbox"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getCard}" text="Cards"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getDatetimePicker}"
                                                      text="DateTimePicker"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getFullCalendar}"
                                                      text="FullCalendar"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getGrowl}" text="Growl"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getSelect}" text="Select"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getSlider}" text="Slider"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getSummernote}"
                                                      text="Summernote"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getToggleSwitch}"
                                                      text="ToggleSwitch"/>
                                    <b:AnchorListItem targetHistoryToken="{nameTokens.getOffline}" text="Offline"/>
                                </b:DropDownMenu>
                            </b:ListDropDown>
                            <b:AnchorListItem text="Fork on GitHub"
                                              href="https://github.com/gwtbootstrap3"/>
                            <b:AnchorListItem text="View Javadoc" href="apidocs/index.html"/>
                        </b:NavbarNav>
                    </b:NavbarCollapse>
                </b:Container>
            </b:Navbar>

            <!-- Container Content -->
            <g:SimplePanel addStyleNames="{style.push}" ui:field="contentContainer"/>

        </b:Container>

    </g:ScrollPanel>

</ui:UiBinder>
