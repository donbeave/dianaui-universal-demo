<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.dianaui.universal.core.client.ui"
             xmlns:d="urn:import:com.dianaui.universal.core.demo.client.ui">

    <ui:style>
        .margin-fix {
            margin-bottom: 0 !important;
        }
    </ui:style>
    <b:Row>
        <b:Column size="XS_12">

            <b:PageHeader text="Time Picker"/>
            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="H3" text="Basic"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:TimeBox/>
                </b:PanelBody>
                <b:PanelFooter>
                    <d:PrettyPre addStyleNames="lang-xml">
                        &lt;b:TimeBox/&gt;\n
                    </d:PrettyPre>
                </b:PanelFooter>
            </b:Panel>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="H3" text="AM/PM format"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:TimeBox hourFormat="_12"/>
                </b:PanelBody>
                <b:PanelFooter>
                    <d:PrettyPre addStyleNames="lang-xml">
                        &lt;b:TimeBox hourFormat="_12"/&gt;\n
                    </d:PrettyPre>
                </b:PanelFooter>
            </b:Panel>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="H3" text="24 format"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:TimeBox hourFormat="_24"/>
                </b:PanelBody>
                <b:PanelFooter>
                    <d:PrettyPre addStyleNames="lang-xml">
                        &lt;b:TimeBox hourFormat="_24"/&gt;\n
                    </d:PrettyPre>
                </b:PanelFooter>
            </b:Panel>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="H3" text="Time (with seconds)"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:TimeBox popupPosition="TOP_LEFT" secondsEnabled="true" minuteStep="10" secondStep="5"
                               defaultTime="00:00:00"/>
                </b:PanelBody>
                <b:PanelFooter>
                    <d:PrettyPre addStyleNames="lang-xml">
                        &lt;b:TimeBox popupPosition="TOP_LEFT" secondsEnabled="true" minuteStep="10" secondStep="5"
                        defaultTime="00:00:00"/&gt;\n
                    </d:PrettyPre>
                </b:PanelFooter>
            </b:Panel>
        </b:Column>

    </b:Row>

</ui:UiBinder>
